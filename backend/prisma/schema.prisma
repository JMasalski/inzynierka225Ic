datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ROOT
  TEACHER
  STUDENT
}

model User {
  id                 String  @id @default(uuid())
  username           String  @unique
  firstName          String?
  lastName           String?
  password           String
  role               Role    @default(STUDENT)
  hasOnboarded       Boolean @default(false)
  createdByTeacherId String?
  groupId            String?

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  // Relacja: nauczyciel który stworzył użytkownika
  createdByTeacher User? @relation("TeacherStudents", fields: [createdByTeacherId], references: [id])

  // Relacja: lista uczniów stworzonych przez nauczyciela
  students User[] @relation("TeacherStudents")

  // Relacja z grupą
  group Group? @relation("GroupStudents", fields: [groupId], references: [id], onDelete: SetNull)

  tasks Task[] @relation("TeacherTask")

  @@index([role])
}

model Group {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacja: lista uczniów należących do grupy
  students User[] @relation("GroupStudents")

  tasks Task[] @relation("TaskGroups")
}

model Task {
  id          String @id @default(uuid())
  title       String
  description String

  // Wszystkie części zadania
  function_signature Json
  test_cases         Json
  templates          Json
  boilerplates       Json

  isActive Boolean

  groups      Group[] @relation("TaskGroups")
  // Relacja z nauczycielem który stworzył to zadanie
  createdById String?
  createdBy   User?   @relation("TeacherTask", fields: [createdById], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
