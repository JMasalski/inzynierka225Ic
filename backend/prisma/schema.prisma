datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ROOT
  TEACHER
  STUDENT
}

enum SubmissionStatus {
  PASSED
  FAILED
}

model User {
  id                 String  @id @default(uuid())
  username           String  @unique
  firstName          String?
  lastName           String?
  password           String
  role               Role    @default(STUDENT)
  hasOnboarded       Boolean @default(false)
  createdByTeacherId String?
  groupId            String?

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  // Relacja: nauczyciel który stworzył użytkownika
  createdByTeacher User? @relation("TeacherStudents", fields: [createdByTeacherId], references: [id])

  // Relacja: lista uczniów stworzonych przez nauczyciela
  students User[] @relation("TeacherStudents")

  // Relacja z grupą
  group Group? @relation("GroupStudents", fields: [groupId], references: [id], onDelete: SetNull)

  tasks      Task[]       @relation("TeacherTask")
  Submission Submission[]

  @@index([role])
}

model Group {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacja: lista uczniów należących do grupy
  students User[] @relation("GroupStudents")

  tasks Task[] @relation("TaskGroups")
}

model Task {
  id          String @id @default(uuid())
  title       String
  description String

  function_signature Json
  test_cases         Json
  templates          Json
  boilerplates       Json

  isActive Boolean

  groups Group[] @relation("TaskGroups")

  createdById String?
  createdBy   User?   @relation("TeacherTask", fields: [createdById], references: [id])

  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  Submission Submission[]
}

model Submission {
  id String @id @default(uuid())

  userId String
  taskId String

  code       String
  languageId Int

  status      SubmissionStatus
  score       Int?
  testResults Json?
  totalTime   Float?
  maxMemory   Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@unique([userId, taskId])
}
